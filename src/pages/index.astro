---
import { getCollection } from "astro:content";
import { siteConfig } from "../config/site-config";
import MainLayout from "../layouts/main-layout.astro";
import TypedBlogPost from "src/components/typed-blog-post.astro";

const blogPost = await getCollection('blog')
---

<MainLayout title="Blog">
  <section class="">
    <div class="container px-6 py-10 mx-auto">
      <h1
        class="text-3xl font-semibold text-gray-800 capitalize lg:text-4xl dark:text-white"
      >
        {siteConfig.title}
      </h1>

      <a href="/blog/1">Blog paginado</a>

      <div class="grid grid-cols-1 gap-8 mt-8 md:mt-16 md:grid-cols-2">
        {blogPost.map((post) => <TypedBlogPost post={post} />)}
      </div>
    </div>
  </section>
</MainLayout>

<style>
  a {
    @apply text-blue-500 hover:underline
  }
</style>
